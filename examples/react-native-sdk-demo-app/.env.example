# Phantom React Native SDK Demo - Environment Variables
# Copy this file to .env and fill in your actual values

# =================
# Required Configuration
# =================

# Your Phantom App ID - required for embedded wallet functionality
# Get this from your Phantom developer dashboard
EXPO_PUBLIC_APP_ID=xxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Phantom Wallet API base URL
# Production: https://api.phantom.app/v1/wallets  
# Staging: https://staging-api.phantom.app/v1/wallets
EXPO_PUBLIC_WALLET_API=https://staging-api.phantom.app/v1/wallets

# =================
# Authentication Configuration
# =================

# Custom authentication URL (optional)
# Leave empty to use default Phantom authentication
# Example: http://localhost:3000/login for local development
EXPO_PUBLIC_AUTH_URL=https://staging-connect.phantom.app/login

# Redirect URL after authentication
# Must match your app's custom URL scheme configured in app.json
# Format: {scheme}://phantom-auth-callback
EXPO_PUBLIC_REDIRECT_URL=your-app-scheme://phantom-auth-callback

# =================
# App Configuration  
# =================

# Custom URL scheme for your app
# Must match the scheme in your app.json/app.config.js
# Used for deep linking after authentication
EXPO_PUBLIC_APP_SCHEME=your-app-scheme

# Embedded wallet type
# Options: "app-wallet" | "user-wallet"
# - app-wallet: Single shared wallet per organization (no OAuth required)
# - user-wallet: Individual wallets per user (requires OAuth authentication)
EXPO_PUBLIC_EMBEDDED_WALLET_TYPE=user-wallet

# =================
# Blockchain Network Configuration
# =================

# Solana RPC URL for Mainnet
# Default: https://api.mainnet-beta.solana.com (free tier - rate limited)
EXPO_PUBLIC_SOLANA_RPC_URL_MAINNET=https://api.mainnet-beta.solana.com

# =================
# Debug Settings
# =================

# Enable debug logging in development
# Options: "true" | "false"
EXPO_PUBLIC_DEBUG=false