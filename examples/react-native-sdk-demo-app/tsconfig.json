{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "customConditions": ["react-native"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "lib", "dist"]
}
