# Phantom React SDK Demo - Environment Variables
# Copy this file to .env and fill in your actual values

# =================
# Required for Embedded Wallet
# =================

# Your Phantom organization ID - required for embedded wallet functionality
# Get this from your Phantom developer dashboard
VITE_ORGANIZATION_ID=xxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Phantom Wallet API base URL - required for embedded wallet functionality  
# Production: https://api.phantom.app/v1/wallets
# Staging: https://staging-api.phantom.app/v1/wallets
VITE_API_BASE_URL=https://api.phantom.app/v1/wallets

# =================
# Authentication Configuration
# =================

# Authentication URL for embedded wallet (optional)
# Production: https://connect.phantom.app
# Staging: Use custom auth endpoint
# Leave empty to use default Phantom auth
VITE_AUTH_URL=https://connect.phantom.app

# Redirect URL after authentication (required for embedded wallet)
# Must match your app's domain and be registered with Phantom
VITE_REDIRECT_URL=http://localhost:5174/auth/callback

# =================
# App Configuration
# =================

# App name to display in wallet connections (optional)
# Default: "React SDK Demo App"
VITE_APP_NAME=React SDK Demo App

# =================
# Provider Configuration
# =================

# Default provider type (optional)
# Options: "injected" | "embedded"
# Default: "embedded"
VITE_PROVIDER_TYPE=embedded

# Solana library choice (optional)
# Options: "web3js" | "kit"
# Default: "kit"
# - web3js: Traditional @solana/web3.js library
# - kit: Modern @solana/kit library (better performance)
VITE_SOLANA_PROVIDER=kit

# Embedded wallet type (optional, only used when provider type is "embedded")
# Options: "app-wallet" | "user-wallet"
# Default: "user-wallet"
# - app-wallet: Single shared wallet per organization
# - user-wallet: Individual wallets per user (requires Google OAuth)
VITE_EMBEDDED_WALLET_TYPE=user-wallet

# =================
# Network Configuration
# =================

# Solana RPC URLs for different networks
# For production, replace with your own RPC endpoints for better reliability
VITE_SOLANA_RPC_URL_MAINNET=https://api.mainnet-beta.solana.com
VITE_SOLANA_RPC_URL_DEVNET=https://api.devnet.solana.com

# For production, use premium RPC providers like Alchemy, QuickNode, or Helius:
# VITE_SOLANA_RPC_URL_MAINNET=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# VITE_SOLANA_RPC_URL_DEVNET=https://solana-devnet.g.alchemy.com/v2/YOUR_API_KEY

# Default network for operations (optional)
# Options: "mainnet" | "devnet" | "testnet"
# Default: "mainnet"
VITE_DEFAULT_NETWORK=mainnet