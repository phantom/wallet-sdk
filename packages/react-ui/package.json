{
  "name": "@phantom/react-ui",
  "version": "2.0.0-beta.2",
  "description": "React UI components for Phantom Wallet SDK with built-in transaction and connection modals",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "?pack-release": "When https://github.com/changesets/changesets/issues/432 has a solution we can remove this trick",
    "pack-release": "rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint --cache . --ext .ts,.tsx",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@phantom/browser-sdk": "workspace:^",
    "@phantom/client": "workspace:^",
    "@phantom/parsers": "workspace:^",
    "@phantom/react-sdk": "workspace:^"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "8.53.0",
    "prettier": "^3.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "phantom",
    "wallet",
    "react",
    "ui",
    "components",
    "modal",
    "transaction",
    "connection"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/phantom/wallet-sdk.git",
    "directory": "packages/react-ui"
  },
  "license": "MIT",
  "publishConfig": {
    "directory": "_release/package"
  }
}
