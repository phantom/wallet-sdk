{
  "name": "@phantom/react-native-sdk",
  "version": "0.1.0",
  "description": "Phantom Wallet SDK for React Native applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "?pack-release": "When https://github.com/changesets/changesets/issues/432 has a solution we can remove this trick",
    "pack-release": "rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "build": "rimraf ./dist && tsup",
    "dev": "rimraf ./dist && tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit && eslint --cache . --ext .ts,.tsx",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "phantom",
    "wallet",
    "react-native",
    "expo",
    "solana",
    "ethereum",
    "crypto",
    "web3"
  ],
  "author": "Phantom",
  "repository": {
    "type": "git",
    "url": "https://github.com/phantom/wallet-sdk.git",
    "directory": "packages/react-native-sdk"
  },
  "dependencies": {
    "@phantom/client": "workspace:*",
    "@phantom/embedded-provider-core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "@react-native-async-storage/async-storage": {
      "optional": true
    },
    "react-native-inappbrowser-reborn": {
      "optional": true
    },
    "react-native-keychain": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "@types/react-native": "^0.72.0",
    "eslint": "8.53.0",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.2",
    "react": "19.1.1",
    "react-native": "^0.72.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29",
    "tsup": "^6.7.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "directory": "_release/package"
  }
}
