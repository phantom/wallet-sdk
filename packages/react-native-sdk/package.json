{
  "name": "@phantom/react-native-sdk",
  "version": "1.0.0",
  "description": "Phantom Wallet SDK for React Native and Expo applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "?pack-release": "When https://github.com/changesets/changesets/issues/432 has a solution we can remove this trick",
    "pack-release": "rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "build": "rimraf ./dist && tsup",
    "dev": "rimraf ./dist && tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit && eslint --cache . --ext .ts,.tsx",
    "check-types": "tsc --noEmit",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "phantom",
    "wallet",
    "react-native",
    "expo",
    "solana",
    "ethereum",
    "crypto",
    "web3"
  ],
  "author": "Phantom",
  "repository": {
    "type": "git",
    "url": "https://github.com/phantom/phantom-connect-sdk",
    "directory": "packages/react-native-sdk"
  },
  "dependencies": {
    "@phantom/api-key-stamper": "workspace:^",
    "@phantom/base64url": "workspace:^",
    "@phantom/chain-interfaces": "workspace:^",
    "@phantom/client": "workspace:^",
    "@phantom/constants": "workspace:^",
    "@phantom/crypto": "workspace:^",
    "@phantom/embedded-provider-core": "workspace:^",
    "@phantom/sdk-types": "workspace:^",
    "@phantom/wallet-sdk-ui": "workspace:^",
    "@types/bs58": "^5.0.0",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3"
  },
  "peerDependencies": {
    "expo": ">=53.0.0",
    "expo-auth-session": ">=5.0.0",
    "expo-secure-store": ">=12.0.0",
    "expo-web-browser": ">=12.0.0",
    "react": ">=19.0.0",
    "react-native": ">=0.79.0",
    "react-native-get-random-values": ">=1.8.0",
    "react-native-svg": ">=15.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "14.0.0-alpha.1",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.0.10",
    "@types/react-native": "^0.72.0",
    "eslint": "8.53.0",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-native": "^4.1.0",
    "expo": "^53.0.20",
    "expo-auth-session": "^6.2.1",
    "expo-secure-store": "^14.2.3",
    "expo-web-browser": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.2",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29",
    "tsup": "^6.7.0",
    "typescript": "^5.8.3",
    "universal-test-renderer": "0.6.0"
  },
  "publishConfig": {
    "directory": "_release/package"
  }
}
