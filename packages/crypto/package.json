{
  "name": "@phantom/crypto",
  "version": "0.0.1",
  "description": "Cryptographic utilities for Phantom SDK",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsup",
    "dev": "rimraf ./dist && tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit && eslint --cache . --ext .ts",
    "prettier": "prettier --write \"src/**/*.{ts}\""
  },
  "dependencies": {
    "bs58": "^5.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "eslint": "8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "ed25519",
    "nacl",
    "phantom",
    "keypair",
    "signing"
  ],
  "license": "MIT"
}
