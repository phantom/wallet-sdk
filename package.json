{
  "name": "@phantom/sdk-monorepo",
  "private": true,
  "packageManager": "yarn@4.2.2",
  "scripts": {
    "clean": "rimraf .turbo node_modules/.cache packages/*/dist examples/*/dist examples/*/.next",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:packages:clean": "turbo run build --filter='./packages/*' --force",
    "build": "turbo run build",
    "build:clean": "turbo run build --force",
    "watch:packages": "turbo watch build --filter='./packages/*'",
    "pack-release": "yarn workspaces foreach --all --topological-dev run pack-release",
    "prettier": "prettier . --write",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "release": "yarn build && yarn pack-release && yarn changeset publish",
    "test": "turbo run test"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "resolutions": {
    "react": "19.0.1",
    "react-dom": "19.0.1",
    "react-native": "0.79.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^1.24.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-check-file": "^2.6.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29",
    "turbo": "^2.6.3",
    "typescript": "^5.8.3"
  }
}
